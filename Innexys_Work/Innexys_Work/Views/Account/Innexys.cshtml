@using Innexys_Work.Security;
@model ICollection<Innexys.Models.Account>
@{
    ViewBag.Title = "Innexys";
}

@section NavSection {
    <nav id="mainNav" class="navbar navbar-default navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand">Home</a>
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        @Html.ActionLink("Logout", "Logout", "Account")
                    </li>
                </ul>
            </div>
        </div>
    </nav>
}

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.0/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

<h2>Welcome @Html.ActionLink(SessionPersiter.Account.Email, "Edit", "Account")!</h2>
@Html.ActionLink("Create task", "Create", "Task")
@Html.ActionLink("Show tasks", "ViewPersonalTasks", "Task")

@section BottomSection {
<section id="services">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading">Users Task</h2>
                <hr class="primary">
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            @foreach (var account in Model)
            {
                    <div class="col-lg-3 col-md-6 text-center">
                        <div class="service-box">
                            <div class="dropdown">
                                <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">
                                    @account.Email
                                    <span class="caret"></span>
                                </button>
                                    <ul class="dropdown-menu">
                                        @foreach (var task in account.Tasks)
                                        {
                                            <li>
                                                <a>@task.Subject</a>
                                            </li>
                                        }
                                    </ul>
                            </div>
                        </div>
                    </div>
             }
        </div>
    </div>
</section>    
}




