@model Innexys_Work.ViewModels.AccountViewModel
@{
    ViewBag.Title = "Register";
}

@section NavSection {
    <nav id="mainNav" class="navbar navbar-default navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header ">
                <a class="navbar-brand">Register</a>
            </div>
        </div>
    </nav>
}

@using (Html.BeginForm("Register", "Account", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <h4>
                    @Html.LabelFor(model => model.Account.Name)
                </h4>
                @Html.TextBoxFor(model => model.Account.Name, new { Style = "color: black;", @class = "text-center" })
                @Html.ValidationMessageFor(model => model.Account.Name, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <h4>
                    @Html.LabelFor(model => model.Account.Email)
                </h4>
                @Html.TextBoxFor(model => model.Account.Email, new { Style = "color: black;", @class = "text-center" })
                @Html.ValidationMessageFor(model => model.Account.Email, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <h4>
                    @Html.LabelFor(model => model.Account.Phone)
                </h4>
                @Html.TextBoxFor(model => model.Account.Phone, new { Style = "color: black;", @class = "text-center" })
                @Html.ValidationMessageFor(model => model.Account.Phone, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <h4>
                    @Html.LabelFor(model => model.Account.Position)
                </h4>
                @Html.EnumDropDownListFor(model => model.Account.Position, new { Style = "color: black;" })
                @Html.ValidationMessageFor(model => model.Account.Position, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                    <input type="submit" value="Sign Up" class="btn btn-primary btn-xl" />
            </div>
        </div>
}

